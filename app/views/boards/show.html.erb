<div class="row padding_top">
	<h2 style="text-align: center;"><%= @board.detail %></h2>
	<%= link_to "投稿する", new_board_post_path(board_id: params[:id]),class: "btn btn-primary btn-lg" %>
	<% @posts.each do |p| %>

	<div class="col-lg-2"></div>
	<div class="col-lg-8">
		<div class="kakomi">
		<b>タイトル: <%= p.title %></b><br>
		<%= p.body %><br>
		<%= link_to "返信する",new_board_post_comment_path(board_id: params[:id], post_id: p.id) %>
		<div class="row">
			<div class="col-lg-1"></div>
			<div class="col-lg-10">
				<% p.comments.each do |c| %>
					<%= c.title %><br>
					<%= c.body %>
					<hr>
				<% end %>
			</div>
			<div class="col-lg-1"></div>
		</div>
		</div>
	</div>
	<div class="col-lg-2"></div>
	<% end %>
</div>
